@model HelpUs.Models.UsuariosViewModel


<div class="row">
    @using (Html.BeginForm("Create", "Usuarios", FormMethod.Post, new { @class = "form-horizontal" }))
    {        
        <div class="form-group">
            <label class="col-md-2 control-label">Usuario</label>
            <div class="col-md-3">
                <input type="text" id="Usuario" name="Usuario" value="@Model.Usuario" class="form-control" required />
            </div>
            <label class="col-md-2 control-label">Empresas</label>
            <div class="col-md-3">
                <select id="IdEmpresa" name="IdEmpresa" class="form-control">
                    @foreach (var cat in Model.EmpresasSelect)
                    {                        
                        <option value="@cat.Value">@cat.Text</option>                     
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Senha</label>
            <div class="col-md-3">
                <input type="text" id="Senha" name="Senha" value="@Model.Senha" class="form-control" required />
            </div>
            <span class="col-md-2"></span>
            <div class="col-md-3">
                @if (Model.TipoUsuario)
                {
                    <input class="form-check-input" value="true" type="checkbox" id="TipoUsuario" name="TipoUsuario" checked>
                }
                else
                {
                    <input class="form-check-input" value="true" type="checkbox" id="TipoUsuario" name="TipoUsuario">
                }
                <label class="control-label">Administrador</label>
            </div>
            
        </div>
        <div class="form-actions" style="">
            <button id='btnSubmit' class='btn btn-success' type='submit'><i class='fa fa-save'></i> Update</button>
            <a href='' onclick='history.go(-1); return false;' class='btn btn-default'> Cancelar</a>
        </div>
    }
</div>
