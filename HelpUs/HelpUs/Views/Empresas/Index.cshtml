@model HelpUs.Models.EmpresasViewModel
@{
    ViewBag.Title = "Empresas";
}
    <input type="hidden" id="IdCaso" name="IdCaso" value="@Model.IdEmpresa" />
    <div id="main">
        <div class="col-md-12">
            <table id="table" class="table table-striped display">
                <thead>
                    <tr>
                        <th></th>
                        <th>Nome da Empresa</th>
                        <th>Email da Empresa</th>
                        <th>CNPJ</th>
                        <th>Telefone da Empresa</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var el in Model.ListEmpresas)
                    {
                        <tr>
                            <td><a class="btn btn-primary" href="@Url.Action("Edit", new { id = el.IdEmpresa })"><i class="fa fa-pencil"></i></a> <a class="btn btn-danger delete" data-id="@el.IdEmpresa" data-toggle="modal" data-target="#myModal"><i class="fa fa-trash"></i></a></td>
                            <td>@el.NomeEmpresa</td>
                            <td>@el.EmailEmpresa</td>
                            <td>@el.Cnpj</td>
                            <td>@el.TelefoneEmpresa</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Delete</h4>
                    </div>
                    <div class="modal-body">
                        <H5>Você Realmente quer deletar este caso?</H5>
                    </div>
                    <div class="modal-footer">
                        <a id="deleteButtomModal" class="btn btn-danger" href=""><i>Deletar</i></a>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="//cdn.datatables.net/1.10.20/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="//cdn.datatables.net/buttons/1.6.1/css/buttons.dataTables.min.css" rel="stylesheet" />

@section Scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.6.1/js/dataTables.buttons.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    {
                        text: 'Novo',
                        action: function (e, dt, node, config) {
                            window.location.href = '/Empresas/New';
                        }
                    }
                ],
                aoColumnDefs: [
                    { "bSortable": false, "aTargets": [0] },
                    { "bSearchable": false, "aTargets": [0] }
                ],
                order: [[1, "asc"]],
                oLanguage: {
                    sUrl: "//cdn.datatables.net/plug-ins/1.10.21/i18n/Portuguese-Brasil.json"
                },
                responsive: true

            });

            $('.delete').on('click', function () {
                $("#deleteButtomModal").attr("href", "/Empresas/Delete/" + $(this).data('id'))
                console.log($("#deleteButtomModal").attr("href"));
            })
        });
    </script>
}