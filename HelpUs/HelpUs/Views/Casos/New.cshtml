@model HelpUs.Models.CasosViewModel


<div class="row">
    @using (Html.BeginForm("Create", "Casos", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <input type="hidden" id="IdCaso" name="IdCaso" />

        <div class="form-group">
            <label class="col-md-2 control-label">Titulo</label>
            <div class="col-md-4">
                <input type="text" id="TituloCaso" name="TituloCaso" class="form-control" />
            </div>
            <label class="col-md-2 control-label">Categorias</label>
            <div class="col-md-3">
                <select id="IdCategoria" name="IdCategoria" class="form-control">
                    @foreach (var cat in Model.CategoriasSelect)
                    {
                        <option value="@cat.Value">@cat.Text</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Descrição</label>
            <div class="col-md-10">
                <textarea id="DescricaoCaso" name="DescricaoCaso" class="form-control" rows="4" style="max-width:90%"></textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Valor</label>
            <div class="col-md-3">
                <input type="text" id="Valor" name="Valor" class="form-control" />
            </div>

            <div class="col-md-1"></div>

            <label class="col-md-2 control-label">Quantidade</label>
            <div class="col-md-2">
                <input type="text" id="Quantidade" name="Quantidade" class="form-control" />
            </div>
        </div>
        <div class="form-actions" style="">
            <button id='btnSubmit' class='btn btn-primary' type='submit'><i class='fa fa-save'></i> Update</button>
            <a href='' onclick='history.go(-1); return false;' class='btn btn-default'> Cancelar</a>
        </div>
    }
</div>
@section Scripts{
    <script>
        $(document).ready(function ()
        {
            $('#Valor').bind('input', function () {
                
                if ($(this).val() > 0) {
                    $('#Quantidade').prop("disabled", true);
                }
                else {
                    $('#Quantidade').prop("disabled", false);
                }
            });
            $('#Quantidade').bind('input', function () {

                if ($(this).val() > 0) {
                    $('#Valor').prop("disabled", true);
                }
                else {
                    $('#Valor').prop("disabled", false);
                }
            });
        });
    </script>    
}
