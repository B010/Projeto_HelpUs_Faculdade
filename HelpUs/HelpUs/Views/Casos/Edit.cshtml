@model HelpUs.Models.CasosViewModel


<div class="row">
    @using (Html.BeginForm("Update", "Casos", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.HttpMethodOverride("PUT")

        <div class="form-horizontal">
            <input type="hidden" asp-for="IdFase" />
            <input type="hidden" asp-for="IdObra" />



            <div class="form-group">
                <label class="col-md-2 control-label">Nome</label>
                <div class="col-md-2">
                    <input asp-for="NomePrazos" class="form-control" />
                </div>
                <label class="col-md-2 control-label">Categorias</label>
                <div class="col-md-3">
                    <select asp-for="@Model.IdCategoria" asp-items="@Model.CategoriasSelect" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Porcentagem</label>
                <div class="col-md-1">
                    <input asp-for="Porcentagem" type="number" min="0" max="100" step="0.01" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Data de Inicio</label>
                <div class="col-md-2">
                    <input asp-for="InicioObra" type="date" class="form-control">
                </div>
                <label class="col-md-2 control-label">Data de Termino</label>
                <div class="col-md-2">
                    <input asp-for="TerminoObra" type="date" class="form-control">
                </div>
            </div>

            <div class="form-actions">
                <button id='btnSubmit' class='btn btn-primary' type='submit'><i class='fa fa-save'></i> Update</button>
                <a href='' onclick='history.go(-1); return false;' class='btn btn-default'> Cancelar</a>
            </div>
        </div>
    }
</div>