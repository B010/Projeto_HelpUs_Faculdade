@model HelpUs.Models.HomeViewModel
@{
    ViewBag.Title = "Menu";
}
<style>
    .first {
        margin-bottom: 10px;
    }
    .Máscaras {
        background: url("../../Images/mascaras.jpg") no-repeat center
    }
    .Dinheiro {
        background: url("../../Images/dinheiro.jpg") no-repeat center
    }
    .Alimentos {
        background: url("../../Images/alimentos.jpg") no-repeat center
    }
    .Remédios {
        background: url("../../Images/remedios.jpg") no-repeat center
    }
    .Roupas {
        background: url("../../Images/roupas.jpg") no-repeat center
    }
    .Sangue {
        background: url("../../Images/sangue.jpg") no-repeat center
    }
</style>

<div id="main">
    <div class="col-md-12">
        @if (Model.ListCasos.Count() > 0)
        {
            foreach (var caso in Model.ListCasos)
            {
                <div class="col-md-6 first">
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row no-gutters">
                            <div class="col-md-5">
                                <svg class="bd-placeholder-img @caso.Categorias.NomeCategoria" width="100%" height="250" xmlns="http://www.w3.org/2000/svg" aria-label="Placeholder: Image" preserveAspectRatio="xMidYMid slice" role="img">
                                    <title>@caso.Categorias.NomeCategoria</title>
                                </svg>
                            </div>
                            <div class="col-md-7">
                                <div class="card-body">
                                    <h2 class="card-title">@caso.TituloCaso</h2>
                                    <h5 class="card-text">@caso.DescricaoCaso</h5>
                                    @if (caso.Quantidade != null)
                                    {
                                        <label>Quantidade Arrecadada: <b style="color:green">@caso.QuantidadeTotal</b></label>
                                        <label>Quantidade Necessaria: <b style="color:blue">@caso.Quantidade</b></label>
                                    }
                                    else
                                    {
                                        <label>Valor Arrecadado: <b style="color:green">R$@caso.ValorTotal</b></label>
                                        <label>Valor Necessario: <b style="color:blue">R$@caso.Valor</b></label>
                                    }
                                    <div class="col-md-12">
                                        <button onclick="location.href='@Url.Action("Details", "Home", new { caso.IdCaso })'" class="btn btn-default">Detalhes</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {

        }
    </div>
</div>