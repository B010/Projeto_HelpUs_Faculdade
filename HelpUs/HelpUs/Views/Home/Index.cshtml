@model HelpUs.Models.HomeViewModel
@{ 
    ViewBag.Title = "Home Page";
}
<style>
    .first{
        margin-bottom:10px;
        border:2px solid red
    }
</style>

<div id="main">
    <div class="col-md-12">
        @foreach (var caso in Model.ListCasos)
        {
            <div class="col-md-6 first">
                <div class="col-md-4">
                    <img class="img-rounded img-responsive" src="~/Images/mascaras.jpg" />
                </div>
                <div class="col-md-8">
                    <div class="col-md-12">
                        <h2 style="text-align:center">@caso.TituloCaso</h2>
                    </div>
                    <div class="col-md-12" style="max-height:200px; min-height:180px">
                        @caso.DescricaoCaso
                    </div>
                    @if (caso.Quantidade != 0)
                    {
                        <div class="col-md-4">
                            <label> @caso.QuantidadeTotal </label>
                        </div>
                        <div class="col-md-1"></div>
                        <div class="col-md-4">
                            <label> @caso.Quantidade</label>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-4">
                            <label>Valor Arrecadado: @caso.ValorTotal </label>
                        </div>
                        <div class="col-md-1"></div>
                        <div class="col-md-4">
                            <label> @caso.Valor </label>
                        </div>
                    }


                    <div class="col-md-1"></div>
                    <div class="col-md-3">
                        <button class="btn btn-default">Mais Detalhes</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>